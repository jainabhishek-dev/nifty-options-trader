# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================================================
# REQUIRED: Kite Connect API Credentials
# Get these from https://kite.trade/connect/
# =============================================================================
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_ACCESS_TOKEN=auto_generated_after_login

# =============================================================================
# REQUIRED: Flask Configuration
# =============================================================================
FLASK_SECRET_KEY=generate_random_secret_key_here
FLASK_ENV=development

# =============================================================================
# AI FEATURES (Phase 2 - Strategy Management)
# =============================================================================
# GEMINI_API_KEY will be added in Phase 2 for AI-powered strategies

# =============================================================================
# OPTIONAL: Database Configuration (Phase 2)
# =============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# =============================================================================
# DEPLOYMENT: Cloud Platform Configuration
# =============================================================================
PORT=5000

# =============================================================================
# TRADING: Default Configuration (Customizable via Web UI)
# These are just defaults - you can change them on the Settings page
# =============================================================================
TRADING_MODE=PAPER
MAX_DAILY_LOSS=5000
TRAILING_STOP_AMOUNT=500
MAX_POSITIONS=5
CAPITAL_PER_TRADE=10000

# Paper Trading Configuration
PAPER_TRADING_CAPITAL=100000

# Nifty Options Configuration
NIFTY_SYMBOL=NIFTY
OPTIONS_EXPIRY_DAYS=7
ATM_RANGE=200
MAX_POSITION_SIZE=25000